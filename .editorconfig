# http://editorconfig.org/

# 4 space indent: Python & Javascript
# 2 space indent: HTML & CSS

root = true

# [*]
charset = utf-8

tab_width = 8

indent_style = space

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,js}]
indent_size = 4

[*.{html,css,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

